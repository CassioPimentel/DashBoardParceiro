@model DashboardParceiro.Models.Cadastros.ParceiroModel

@{
    ViewData["Title"] = "Meus Dados";
}

<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
    <div class="card mb-3">
        <div class="card-header">
            <h3><i class="fa fa-check-square-o"></i> Seus Dados</h3>
        </div>

        <div class="card-body">

            <form asp-action="Save">
                <div class="form-group">
                    <label asp-for="RazaoSocial" class="control-label"></label>
                    <input asp-for="RazaoSocial" class="form-control" />
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CNPJ" class="control-label"></label>
                        <input asp-for="CNPJ" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="InscEstadual" class="control-label"></label>
                        <input asp-for="InscEstadual" class="form-control" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FonePrincipal" class="control-label"></label>
                        <input asp-for="FonePrincipal" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Cep" class="control-label"></label>
                        <input asp-for="Cep" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Uf" class="control-label"></label>
                        <input asp-for="Uf" class="form-control" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Bairro" class="control-label"></label>
                        <input asp-for="Bairro" class="form-control" />
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="Complemento" class="control-label"></label>
                        <input asp-for="Complemento" class="form-control" />
                    </div>
                </div>
                <input value="@Model.Id" type="hidden" />
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>

        </div>
    </div><!-- end card-->
</div>