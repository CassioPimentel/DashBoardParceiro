@model DashboardParceiro.Models.Cadastros.Produto

@{
    ViewData["Title"] = "Criar";
}

<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
    <div class="card mb-5">
        <div class="card-header">
            <h3>Produto</h3>
        </div>

        <div class="card-body">
            <form autocomplete="off" asp-action="Save">
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Codigo" class="control-label"></label>
                        <input asp-for="Codigo" readonly class="form-control" />
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CodPersonalizado" class="control-label"></label>
                        <input asp-for="CodPersonalizado" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="PrecoCusto" class="control-label"></label>
                        <input asp-for="PrecoCusto" class="form-control" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PrecoVenda" class="control-label"></label>
                        <input asp-for="PrecoVenda" class="form-control" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CategoriaID" class="control-label"></label>
                        <select asp-for="CategoriaID" asp-items="Model.Categorias" class="form-control"></select>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="MedidaID" class="control-label"></label>
                        <select asp-for="MedidaID" asp-items="Model.Medidas" class="form-control"></select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
                <button asp-controller="Produto" asp-action="Index" class="btn btn-default">Voltar</button>
            </form>
        </div>
    </div>
</div>